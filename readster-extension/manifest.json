{
  "manifest_version": 3,
  "name": "Readster Chrome Extension",
  "version": "1.0",
  "description": "Right-click any text to read it instantly with Readster.",
  "permissions": ["contextMenus", "tabs", "storage", "scripting"],
  "background": {
    "service_worker": "worker.js"
  },
  "content_scripts": [
    {
      "matches": ["http://localhost:5173/*"],
      "js": ["contentScript.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
